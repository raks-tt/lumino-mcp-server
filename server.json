{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.spre-sre/lumino",
  "title": "Lumino MCP Server",
  "description": "AI-powered SRE observability for Kubernetes and OpenShift with 40+ tools for Tekton pipeline debugging, log analysis, root cause analysis, and predictive monitoring.",
  "version": "0.9.1",
  "websiteUrl": "https://github.com/spre-sre/lumino-mcp-server",
  "repository": {
    "url": "https://github.com/spre-sre/lumino-mcp-server",
    "source": "github"
  },
  "packages": [
    {
      "registryType": "pypi",
      "registryBaseUrl": "https://pypi.org",
      "identifier": "lumino-mcp-server",
      "version": "0.9.1",
      "runtimeHint": "uvx",
      "transport": {
        "type": "stdio"
      },
      "packageArguments": [],
      "environmentVariables": [
        {
          "name": "KUBECONFIG",
          "description": "Path to Kubernetes config file for cluster authentication",
          "isRequired": false,
          "isSecret": false,
          "default": "~/.kube/config"
        }
      ]
    }
  ],
  "_meta": {
    "io.modelcontextprotocol.registry/publisher-provided": {
      "categories": ["cloud", "devops", "monitoring", "kubernetes"],
      "tags": ["kubernetes", "openshift", "tekton", "sre", "observability", "pipelines", "log-analysis", "root-cause-analysis", "predictive-monitoring"],
      "license": "Apache-2.0",
      "language": "python"
    }
  }
}
